<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Meet our Pastors"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/pastorone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:text="Senior Pastor: \n    Pastor Justin Siao \n Address: \n    Holy Family Village, Banilad, Cebu City \n Email Address: \n    justin.siao@gmail.com \n Contact number: \n    09227315043"
            android:textSize="20sp"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/pastortwo"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:text="Senior Pastor: \n    Pastor Juby Siao \n Address: \n    Holy Family Village, Banilad, Cebu City \n Email Address: \n    juby.siao@gmail.com \n Contact number: \n    09227315043"
            android:textSize="20sp" 
            android:layout_weight="3"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>